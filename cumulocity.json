{
  "apiVersion": "v1",
  "version": "2.0.19",
  "provider": {
    "name": "Cumulocity"
  },
  "isolation": "MULTI_TENANT",
  "scale": "AUTO",
  "replicas": 1,
  "resources": {
                  "cpu": "0.2",
                  "memory": "256Mi"
                },
  "requestedResources":{
                  "cpu": "100m",
                  "memory": "128Mi"
                       },
  "requiredRoles": [
    "ROLE_INVENTORY_ADMIN",
    "ROLE_INVENTORY_READ",
    "ROLE_IDENTITY_ADMIN",
    "ROLE_IDENTITY_READ",
    "ROLE_MEASUREMENT_ADMIN",
    "ROLE_MEASUREMENT_READ",
    "ROLE_MEASUREMENT_CREATE",
    "ROLE_EVENT_ADMIN",
    "ROLE_EVENT_READ",
    "ROLE_EVENT_CREATE",
    "ROLE_ALARM_ADMIN",
    "ROLE_ALARM_READ",
    "ROLE_ALARM_CREATE"
  ],
  "roles": [],
  "livenessProbe": {
    "httpGet": {
        "path": "/health"
    },
    "initialDelaySeconds": 60,
    "periodSeconds": 60
}
}